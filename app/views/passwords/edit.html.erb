<h1>Update Password</h1>

<%= form_with model: current_user, url: password_path do |f| %>
  <% if f.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :password_challenge, "Current Password" %><br />
    <%= f.text_field :password_challenge, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :password, "New Password" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Update Password" %>
  </div>
<% end %>
