<h1>Login</h1>

<%= form_with model: @user, url: session_path do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>

<%= link_to "forgot your password?", new_password_reset_path %>